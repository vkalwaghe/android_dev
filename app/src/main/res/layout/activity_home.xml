<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:osm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- OSM Map View -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Starting Point Input (AutoCompleteTextView) -->
    <AutoCompleteTextView
        android:id="@+id/startLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/rounded_edittext_background"
        android:hint="Starting Point"
        android:padding="12dp"
        android:textColorHint="#8A8A8A"
        android:importantForAccessibility="yes"
        android:contentDescription="Starting point input field" />

    <!-- Destination Input (AutoCompleteTextView) -->
    <AutoCompleteTextView
        android:id="@+id/destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/startLocation"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext_background"
        android:hint="Destination"
        android:padding="12dp"
        android:textColorHint="#8A8A8A"
        android:importantForAccessibility="yes"
        android:contentDescription="Destination input field" />

    <!-- Ride Option Spinner -->
    <Spinner
        android:id="@+id/rideOptionSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/destination"
        android:layout_margin="16dp"
        android:importantForAccessibility="yes"
        android:contentDescription="Ride option selection spinner" />

    <!-- Book Your Ride Button -->
    <Button
        android:id="@+id/bookRideButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation"
        android:layout_margin="16dp"
        android:layout_marginBottom="595dp"
        android:background="@drawable/rounded_edittext_background"
        android:contentDescription="Button to book ride"
        android:importantForAccessibility="yes"
        android:text="Book Your Ride"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!-- Fare and Time Text Views -->
    <TextView
        android:id="@+id/fareTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rideOptionSpinner"
        android:layout_margin="16dp"
        android:layout_marginTop="-161dp"
        android:text="Estimated Fare: â‚¹0"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fareTextView"
        android:layout_margin="16dp"
        android:text="Estimated Time: 0 mins"
        android:textSize="14sp" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <!-- Home Button -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_home" />
            <TextView
                android:id="@+id/homeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Completed Rides Button -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/completedRidesIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_completed_rides" />
            <TextView
                android:id="@+id/completedRidesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed Rides"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Account Button -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/accountIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_account" />
            <TextView
                android:id="@+id/accountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
